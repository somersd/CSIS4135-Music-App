@model IEnumerable<Music_App.Models.Album>
@{
    ViewData["Title"] = "Albums";
}
<h2>Album List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var album in Model)
    {
        <tr>
            <td>@album.Title</td>
            <td></td>
            <td></td>
            <td>@album.Price</td>
        </tr>
    }
</table>